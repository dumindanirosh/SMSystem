<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.sportsclub.duminda.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClubController</servlet-name>
        <servlet-class>com.sportsclub.duminda.controller.ClubController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AthleteController</servlet-name>
        <servlet-class>com.sportsclub.duminda.controller.AthleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.sportsclub.duminda.controller.EventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/user.action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClubController</servlet-name>
        <url-pattern>/club.action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AthleteController</servlet-name>
        <url-pattern>/athlete.action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/event.action</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
